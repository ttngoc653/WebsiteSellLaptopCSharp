@model int

@using (Html.BeginForm("CreateComment", "Detail", FormMethod.Post))
{
    <input type="hidden" name="masp" value="@Model" />
    <input type="hidden" name="khachhang" value="@Session["user"]" />
    <input type="hidden" name="thoigian" value="@DateTime.Now" />
