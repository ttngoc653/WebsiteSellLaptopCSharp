@model IEnumerable<SellLaptop.Models.chi_tiet_don_hang>

@foreach (var item in Model)
{
    <div style="border: dotted;margin: 5px;    float: none;    width: 137px;   text-align: center;    border-radius: 10px;    float: left;    border-color:#d6e9c6;">
        <a href="@Url.Action("","Detail", new { id=item.masp})" title="@item.san_pham.tencartdohoa,@item.san_pham.cpu.congnghe, RAM @item.san_pham.ramdl GB">
            <img width="120px" height="120px" src="@String.Format("image/{0}/{1}",item.masp,item.san_pham.icon)" />
            <div style="font: bold 14px arial;    color: #f39;    margin-top: 2px;">@item.san_pham.tenhangsx @item.san_pham.tensp</div>
            <div style="font: bold 12px arial;    color: #f30;">Giá: @String.Format("{0:C}",item.san_pham.gia)</div>
            <div>Đã bán: @item.soluongsp máy</div>
        </a>
    </div>
}