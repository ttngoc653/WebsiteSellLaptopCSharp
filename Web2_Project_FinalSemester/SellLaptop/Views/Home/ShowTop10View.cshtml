@using System.Globalization;
@model IEnumerable<SellLaptop.Models.san_pham>

@foreach (var item in Model)
{
    <div style="border: dotted;margin: 5px;    float: none;    width: 137px;   text-align: center;    border-radius: 10px;    float: left;    border-color:#ebccd1;">
        <a href="@Url.Action("","Detail", new { id=item.masp})" title="@item.tencartdohoa,@item.cpu.congnghe, RAM @item.ramdl GB">
            <img width="120px" height="120px" src="@String.Format("image/{0}/{1}",item.masp,item.icon)" />
            <div style="font: bold 14px arial;    color: #f39;    margin-top: 2px;">@item.tenhangsx @item.tensp</div>
            <div style="font: bold 12px arial;    color: #f30;">Giá: @item.gia.ToString("N", CultureInfo.CreateSpecificCulture("es-ES")) VNĐ</div>
            <div>@item.luotview lượt xem</div>
            @if (Session["role"] != null)
            {
                using (Html.BeginForm("Add", "Cart", FormMethod.Post))
                {
                    <input type="hidden" name="id" value="@item.masp" />
                    <button title="Đặt hàng" type="submit" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-shopping-cart" /></button>
                }
            }
        </a>
    </div>
}